<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netcoreapp3.1;netcoreapp6.0;net8.0</TargetFrameworks>
		<AssemblyName>Sysphera.Middleware.Drapo</AssemblyName>
		<RootNamespace>Sysphera.Middleware.Drapo</RootNamespace>
	</PropertyGroup>
	<PropertyGroup>
		<TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
		<TypeScriptCompileBlocked>false</TypeScriptCompileBlocked>
		<TypeScriptCompileBlocked Condition="!$(TargetFrameworks.StartsWith($(TargetFramework)))">true</TypeScriptCompileBlocked>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.4.5">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<Content Include="tsconfig.json" />
	</ItemGroup>
	<Target Name="CleanLibFiles" BeforeTargets="Clean" Condition="'$(TypeScriptCompileBlocked)' != 'true' AND '$(DesignTimeBuild)' != 'true'">
		<ItemGroup>
			<FilesToDelete Include="lib\*"/>
		</ItemGroup>
		<Delete Files="@(FilesToDelete)" />
	</Target>
	<Target Name="TSLint" BeforeTargets="CompileTypeScriptWithTSConfig" Condition="'$(TypeScriptCompileBlocked)' != 'true' AND '$(BuildingProject)' == 'true' AND '$(DesignTimeBuild)' != 'true'">
		<Exec Command="npx tslint --project ."/>
	</Target>
	<Target Name="CreateLibFiles" AfterTargets="CompileTypeScriptWithTSConfig" Condition="'$(TypeScriptCompileBlocked)' != 'true' AND '$(BuildingProject)' == 'true' AND '$(DesignTimeBuild)' != 'true'">
		<ItemGroup>
			<JsFiles Include="node_modules/es6-promise/dist/es6-promise.auto.min.js;node_modules/@microsoft/signalr/dist/browser/signalr.min.js;js\*.js"/>
			<DefFiles Include="js\*.d.ts"/>
		</ItemGroup>
		<ItemGroup>
			<JsFileContents Include="$([System.IO.File]::ReadAllText(%(JsFiles.Identity)))"/>
			<DefFileContents Include="$([System.IO.File]::ReadAllText(%(DefFiles.Identity)))"/>
		</ItemGroup>
		<WriteLinesToFile File="lib\drapo.js" Lines="@(JsFileContents)" Overwrite="true" />
		<WriteLinesToFile File="lib\drapo.min.js" Lines="@(JsFileContents)" Overwrite="true" />
		<WriteLinesToFile File="lib\index.d.ts" Lines="@(DefFileContents)" Overwrite="true" />
	</Target>
	<ItemGroup>
		<EmbeddedResource Include="lib\*.js" />
	</ItemGroup>
	<ItemGroup>
		<None Remove="components\**\*" />
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="components\**\*" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
		<PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
		<PackageReference Include="StackExchange.Redis" Version="2.2.50" />
	</ItemGroup>
</Project>
