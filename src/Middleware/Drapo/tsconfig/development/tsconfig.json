{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "../../js/",
    "declaration": true,
    "lib": [
      "dom",
      "es2021"
    ]
  },
  "exclude": [
    "../../js/**/*"
  ],
  "include": [
    "../../ts/**/*"
  ]
}
