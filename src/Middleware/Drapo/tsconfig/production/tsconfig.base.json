{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es5",
    "declaration": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es6"
    ]
  },
  "exclude": [
    "../../js/**/*"
  ],
  "include": [
    "../../ts/**/*"
  ]
}
